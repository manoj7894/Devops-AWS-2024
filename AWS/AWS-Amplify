# Admin-ui

version: 1
frontend:
  phases:
    preBuild:
      commands:
        - echo "Clearing Amplify cache and node_modules..."
        - rm -rf node_modules
        - rm -rf /root/.cache # Clear global cache (Amplify build cache)
        - echo "Installing dependencies..."
        - npm install
    build:
      commands:
        - echo "Running build..."
        - npm run build
  artifacts:
    baseDirectory: dist
    files:
      - "**/*"
  cache:
    paths: [] # Disable caching completely






# Delivery app
-> For delivery app deployment we should add below thing in package.json under script section
   "build": "expo export" 

version: 1
frontend:
  phases:
    preBuild:
      commands:
        - echo "Setting up Node.js..."
        - nvm install 20  # Change this to 22 if your project supports it
        - nvm use 20
        - node -v
        - npm -v
        - corepack enable
        - npm install -g npm@latest  # Ensure latest npm version
        - npm install --silent --global expo-cli
        - npm ci --cache .npm --prefer-offline || npm install
        - |
          if [ -f yarn.lock ]; then
            yarn install --frozen-lockfile || exit 1
          elif [ -f package-lock.json ] || [ -f npm-shrinkwrap.json ]; then
            npm ci --cache .npm --prefer-offline || npm install
          else
            npm install || exit 1
          fi
    build:
      commands:
        - echo "Starting build process..."
        - ls -la  # Debug: List project files
        - npm run build || { echo "Build failed"; exit 1; } # Adjust for your framework (React, Expo, etc.)
  artifacts:
    baseDirectory: dist  # Modify based on your output directory
    files:
      - '**/*'
  cache:
    paths:
      - .npm/**/*
      - $(npm root --global)/**/*




# Mobile-web

version: 1
frontend:
  phases:
    preBuild:
      commands:
        - echo "Clearing previous caches..."
        - rm -rf node_modules
        - rm -rf /root/.npm
        - rm -rf /root/.cache
        - echo "No build needed"

    build:
      commands:
        - echo "Skipping build step"

  artifacts:
    baseDirectory: .
    files:
      - "**/*"

  cache:
    # Disable caching completely for clean builds
    paths: []



# Static page

version: 1
frontend:
  phases:
    preBuild:
      commands:
        - echo "Clearing previous npm and Amplify caches..."
        - rm -rf .npm
        - rm -rf node_modules
        - rm -rf /root/.npm
        - rm -rf /root/.cache

        - echo "Installing dependencies..."
        - npm ci --legacy-peer-deps

    build:
      commands:
        - echo "Running build..."
        - npm run build

  artifacts:
    baseDirectory: build
    files:
      - '**/*'

  cache:
    # Disable caching completely so Amplify doesnâ€™t reuse old cache
    paths: []




# Hub Amplify
version: 1
frontend:
  phases:
    preBuild:
      commands:
        # Use Node.js 18 (required for modern Vite builds)
        - nvm install 18
        - nvm use 18

        # Clear any existing caches or previous dependencies
        - echo "Clearing Amplify and npm caches..."
        - rm -rf node_modules
        - rm -rf /root/.npm
        - rm -rf /root/.cache

        # Install dependencies (ignore lock file mismatch)
        - echo "Installing dependencies..."
        - npm install --legacy-peer-deps

    build:
      commands:
        - echo "Running Vite build..."
        - npm run build

  artifacts:
    # Vite always outputs to dist
    baseDirectory: dist
    files:
      - "**/*"

  cache:
    # Disable caching completely (forces a clean build every time)
    paths: []
